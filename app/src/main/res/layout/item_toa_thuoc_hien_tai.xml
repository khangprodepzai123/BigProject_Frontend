<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTenThuoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên thuốc"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1e88e5"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvSoLuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng: "
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvLieuDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liều dùng: "
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvCachDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cách dùng: "
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvSoLanUong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lần uống: "
            android:textSize="14sp"
            android:textColor="#4caf50"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>



