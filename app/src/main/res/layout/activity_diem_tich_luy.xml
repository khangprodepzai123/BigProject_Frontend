<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Header với nút quay lại -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">
        
        <Button
            android:id="@+id/btnQuayLai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Quay lại"
            android:textSize="14sp"
            android:background="?attr/selectableItemBackground"
            android:textColor="#1e88e5"
            android:padding="8dp" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Điểm tích lũy &amp; Ưu đãi"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1e88e5"
            android:textAlignment="center" />
    </LinearLayout>

    <!-- Card Điểm tích lũy -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm tích lũy hiện tại"
                android:textSize="16sp"
                android:textColor="#666"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDiemTichLuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="#1e88e5"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="điểm"
                android:textSize="18sp"
                android:textColor="#666" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card Mức ưu đãi -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mức ưu đãi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvTenMuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chưa có"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#ff9800"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvMoTa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chưa có mô tả"
                android:textSize="14sp"
                android:textColor="#666" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card Ưu đãi -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ưu đãi hiện tại"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giảm giá cho lần khám tiếp theo:"
                    android:textSize="14sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/tvPhanTramGiamGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#4caf50" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCoTheSuDung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn chưa có điểm để sử dụng"
                android:textSize="14sp"
                android:textColor="#666"
                android:textStyle="italic" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Empty state -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đang tải..."
        android:textSize="16sp"
        android:textColor="#666"
        android:textAlignment="center"
        android:padding="32dp"
        android:visibility="gone" />

</LinearLayout>

