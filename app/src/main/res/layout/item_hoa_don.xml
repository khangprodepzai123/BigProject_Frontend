<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvMaHd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã hóa đơn: HD001"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1e88e5"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvNgayLap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày lập: 01/01/2025"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvBacSi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bác sĩ: BS001"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvThanhTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thành tiền: 1,000,000 đ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#d32f2f" />

    </LinearLayout>
</androidx.cardview.widget.CardView>



